{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "space-in-parens" : ["error", "never"],
        "switch-colon-spacing": ["error", {"after": true, "before": false}],
        "key-spacing": ["error", { "align": "colon" }]
    }
}
